#ifndef INTRINSIC_FUNCTION
#define INTRINSIC_FUNCTION(NAME, VERSION)
#endif

/// EXP -> EXP, DEXP
#define INTRINSIC_FUNCTION_ADD_D_PREFIX(NAME,VERSION) \
  INTRINSIC_FUNCTION(NAME, VERSION) \
  INTRINSIC_FUNCTION(D##NAME, VERSION)

/// EXP -> EXP, DEXP, CEXP
#define INTRINSIC_FUNCTION_ADD_DC_PREFIX(NAME,VERSION) \
  INTRINSIC_FUNCTION(NAME, VERSION) \
  INTRINSIC_FUNCTION(D##NAME, VERSION) \
  INTRINSIC_FUNCTION(C##NAME, VERSION)

/// EXP -> EXP, AEXP, DEXP, CEXP
#define INTRINSIC_FUNCTION_ADD_ADC_PREFIX(NAME,VERSION) \
  INTRINSIC_FUNCTION(NAME, VERSION) \
  INTRINSIC_FUNCTION(A##NAME, VERSION) \
  INTRINSIC_FUNCTION(D##NAME, VERSION) \
  INTRINSIC_FUNCTION(C##NAME, VERSION)

/// EXP -> EXP, AEXP, DEXP
#define INTRINSIC_FUNCTION_ADD_AD_PREFIX(NAME,VERSION) \
  INTRINSIC_FUNCTION(NAME, VERSION) \
  INTRINSIC_FUNCTION(A##NAME, VERSION) \
  INTRINSIC_FUNCTION(D##NAME, VERSION)

//
// Version flags allowed:
//   FUNALL    - This is an intrinsic functions in all variants of Fortran.
//   FUNNOTF77 - This is an intrinsic functions  keyword for all variants of Fortran except 77.
//   FUNF77    - This is an intrinsic functions  keyword for Fortran 77.
//   FUNF90    - This is an intrinsic functions  keyword for Fortran 90.
//   FUNF95    - This is an intrinsic functions  keyword for Fortran 90/95.
//   FUNF2003  - This is an intrinsic functions  keyword for Fortran 2003.
//   FUNF2008  - This is an intrinsic functions  keyword for Fortran 2003/2008.
//

// conversion functions
INTRINSIC_FUNCTION(INT, FUNALL)
INTRINSIC_FUNCTION(IFIX, FUNALL)
INTRINSIC_FUNCTION(IDINT, FUNALL)

INTRINSIC_FUNCTION(REAL, FUNALL)
INTRINSIC_FUNCTION(FLOAT, FUNALL)
