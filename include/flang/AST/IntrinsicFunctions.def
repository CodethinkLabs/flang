// real * real => double prec
INTRINSIC_FUNCTION(DPROD, FUNALL)

INTRINSIC_FUNCTION(MAX, FUNALL)
INTRINSIC_FUNCTION(MAX0, FUNALL) //int->int
INTRINSIC_FUNCTION(AMAX1, FUNALL) //real->real
INTRINSIC_FUNCTION(DMAX1, FUNALL) //double->double
INTRINSIC_FUNCTION(AMAX0, FUNALL) //int->real
INTRINSIC_FUNCTION(MAX1, FUNALL) //real->int

INTRINSIC_FUNCTION(MIN, FUNALL)
INTRINSIC_FUNCTION(MIN0, FUNALL) //int->int
INTRINSIC_FUNCTION(AMIN1, FUNALL) //real->real
INTRINSIC_FUNCTION(DMIN1, FUNALL) //double->double
INTRINSIC_FUNCTION(AMIN0, FUNALL) //int->real
