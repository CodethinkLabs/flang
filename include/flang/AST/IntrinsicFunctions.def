#undef INTRINSIC_FUNCTION_ADD_D_PREFIX
#undef INTRINSIC_FUNCTION_ADD_DC_PREFIX
#undef INTRINSIC_FUNCTION_ADD_AD_PREFIX
#undef INTRINSIC_FUNCTION_ADD_ADC_PREFIX
#undef INTRINSIC_FUNCTION
