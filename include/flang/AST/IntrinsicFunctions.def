INTRINSIC_FUNCTION_ADD_DC_PREFIX(SIN, FUNALL)
INTRINSIC_FUNCTION_ADD_DC_PREFIX(COS, FUNALL)
INTRINSIC_FUNCTION_ADD_D_PREFIX(TAN, FUNALL)
